<!doctype html>
<html lang="en">
<body>
    <div class="card" style="padding-top: 60px; color: white">
        <div class="card-header mx-auto d-block" style="background: #40c463; font-size: 30px; width: 100%;">
            <span class="spinner-grow spinner-grow mx-auto d-block" style="float: left"></span>
            <span class="mx-auto d-block" style="float: left">출고목록</span>
        </div>
    </div>
    
    <div class="container" style="margin-top: 45px;">
        <div class="col-sm-12 mx-auto d-block" style="float: left; margin: 10px">
            <div class="col-sm-12">
                <div class="row">
                    <span class="" style="font-size: 25px; color: #34a853; margin-right: 0.5em;">물품명</span>
                    <div class="col-sm-2.5">
                        <input class="form-control" type="search" name="item_name" placeholder="Search"
                            aria-label="Search" id="search">
                    </div>
                </div>
            </div>
            <div class="col-sm-12" style="margin-top : 1em;">
                <div class="row">
                    <span class="" style="font-size: 25px; color: #34a853;">날짜</span>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <input type="date" name="day" max="3000-12-31"
                                min="1000-01-01" class="form-control" id="startday">
                        </div>
                    </div>
                    <span class="" style="font-size: 25px; color: #34a853;"> ~ </span>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <input type="date" name="day" max="3000-12-31"
                                min="1000-01-01" class="form-control" id="endday">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <button type="button" class="btn btn-success" onclick="search()">검색</button>
                    </div>
                </div>
            </div>
        </div>
        <div style="width:100%; height:500px; overflow:auto">
            <table id="recive-table" class="table table-borderless table-hover" style="border-top: 1px solid #c6edd1; table-layout: fixed">
                <thead style="background-color:#40c463;">
                    <tr>
                        <th style="color: #ffffff; border-radius: 10px 0 0 10px;">번호</th>
                        <th style="color: #ffffff;">물품번호</th>
                        <th style="color: #ffffff;">물품명</th>
                        <th style="color: #ffffff;">출고날짜</th>
                        <th style="color: #ffffff;">출고수량</th>
                        <th style="color: #ffffff;">가격(개당)</th>
                        <th style="color: #ffffff;">가격(총)</th>
                        <th style="color: #ffffff; border-radius: 0 10px 10px 0;">출고승인여부</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(rv.length == 0) {%>
                        <% if(value != 0) {%>
                            <script>
                                alert("조회된 데이터가 없습니다.");    
                            </script>
                        <%}%>
                    <%}else{%>
                        <% for(var i = 0; i < rv.length; i++){ %>
                            <tr>
                                <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;"><%= i + 1 %></td>
                                <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;"><%= rv[i].Stationery_NO %></td>
                                <td style=" width:50%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;"><%= rv[i].stationery.Name %></td>
                                <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;"><%= rv[i].Date %></td>
                                <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;"><%= rv[i].Count %></td>
                                <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;"><%= rv[i].Price %></td>
                                <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;"><%= rv[i].All_Price %></td>
                                <%if (rv[i].Approval == 0) {%>
                                    <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;">미승인</td>
                                <%}else{%>
                                    <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;">승인</td>
                                <%}%>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <% if (user.Authority == 0) { %>
            <button class="btn btn-success" style="float: right; margin-left: 0.5em;" onclick="window.open('/forward_management/forward_apply_window','승인','width=950,height=500,location=no,status=no,scrollbars=yes');">승인</button>
        <% } %>
        <button class="btn btn-success" style="float: right;" onclick="window.open('/forward_management/forward_add_window','등록','width=950,height=500,location=no,status=no,scrollbars=yes');">출고등록</button>
    </div>
</body>
</html>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script>
    function search(){
        //검색
        var StartDay = $('#startday').val();
        var EndDay = $('#endday').val();
        var Search = $('#search').val();

        if(StartDay == "" || EndDay == "" || Search == ""){
            alert('날짜와 물품명을 채워주세요.');
            return false;
        }else{
            $.ajax({
                url: '/forward_management/search',
                async: true,
                type: 'POST',
                data: {
                    StartDay: StartDay,
                    EndDay: EndDay,
                    Search: Search,
                },
                dataType: 'json',
            })
            // $('#startday').val() = StartDay;
            // $('#endday').val() = EndDay;
            // $('#search').val() = Search;
            window.location.href='/forward_management';
        }
    }
</script>

