<style>
    .board{
        margin-left: 1.5em;
        margin-right: 1.5em;
    }
</style>
<!doctype html>
<link href='http://127.0.0.1:3000/nodeModule/chart.js/dist/Chart.css' rel='stylesheet'/>
<script src='http://127.0.0.1:3000/nodeModule/chart.js/dist/Chart.js'></script>
<html lang="en">
<body>
    <div class="card" style="padding-top: 60px; color: white">
        <div class="card-header mx-auto d-block" style="background: #40c463; font-size: 30px; width: 100%;">
            <span class="spinner-grow spinner-grow mx-auto d-block" style="float: left"></span>
            <span class="mx-auto d-block" style="float: left">제품추천목록</span>
        </div>
    </div>

    <div class="container" style="margin-top: 20px">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <span class="" style="font-size: 25px; color: #34a853; margin-left: 15px">날짜</span>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <input type="date" name="years" max="3000-12-31" min="1000-01-01" class="form-control" id="startday">
                        </div>
                    </div>
                    <span class="" style="font-size: 25px; color: #34a853; margin-left: 15px"> ~ </span>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <input type="date" name="years" max="3000-12-31" min="1000-01-01" class="form-control" id="endday">
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <button class="btn btn-success" style="margin-left: 3px" type="button" onclick="search()">검색</button>
                    </div>
                </div>
            </div>
        </div>
        <!--버튼 수정본-->
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><input type = "button" class="btn btn-success" value="조회관리" style=" color: #ffffff; font-size: small; height: 30px;" onclick="search_view()"></a></li>
            <li class="breadcrumb-item"><input type = "button" class="btn btn-success" value="추천 그래프" a style=" color: #ffffff;font-size: small; height: 30px;" onclick="grapth_view()"></a></li>
        </ul>
    
        <div id="Rqgboard" >
            <div class="board">
                <div class="row">
                        <div style="width:100%; height:500px; overflow:auto">
                            <table class="table table-borderless table-hover">
                                <thead style="background-color:#40c463;">
                                        <th style="color: #ffffff; border-radius: 10px 0 0 10px;">번호</th>
                                        <th style="color: #ffffff;">제품명</th>
                                        <th style="color: #ffffff;">개수</th>
                                        <th style="color: #ffffff; border-radius: 0 10px 10px 0;">날짜</th>
                                </thead>
                                <tbody>
                                    <% if(rv.length == 0) {%>
                                        <% if(value != 0) {%>
                                            <script>
                                                alert("조회된 데이터가 없습니다.");    
                                            </script>
                                        <%}%>
                                    <%}else{%>
                                        <% for(var i = 0; i < rv.length; i++){ %>
                                            <tr>
                                                <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;"><%= i + 1 %></td>
                                                <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;"><%= rv[i].stationery.Name %></td>
                                                <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;"><%= rv[i].Count %></td>
                                                <td style=" width:20%; text-overflow:ellipsis; overflow:hidden; white-space:nowrap; border-bottom: 1px solid #c0c0c0;"><%= rv[i].Today %></td>
                                            </tr>
                                        <% } %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- 그래프는 여기다 넣으면 됨 -->
            <!-- 그래프 쓰는 방법 찾아봐서 쓸 것 (그래프는 영재도 모른다고 함...) -->
            <div id="graph">
                <div class="board">
                    <div class="row">
                        <canvas id="myChart" width="1100" height="800" style="border:1px solid black"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>

<script>
    Rqgboard.style.display = "block";
    graph.style.display = "none";


    // view 전환 function
    function search_view(){
        Rqgboard.style.display = "block";
        graph.style.display = "none";

    }
    function search(){
        //검색
        var StartDay = $('#startday').val();
        var EndDay = $('#endday').val();

        if(StartDay == "" || EndDay == ""){
            alert('날짜를 채워주세요.');
            return false;
        }else{
            $.ajax({
                url: '/product_recommendation_list/search',
                async: true,
                type: 'POST',
                data: {
                    StartDay: StartDay,
                    EndDay: EndDay,
                },
                dataType: 'json',
            })
            // $('#startday').val() = StartDay;
            // $('#endday').val() = EndDay;
            // $('#search').val() = Search;
            window.location.href='/product_recommendation_list';
        }
    }


    //그래프 표시
    function grapth_view(){

        var StartDay = $('#startday').val();
        var EndDay = $('#endday').val();

        var Sales_SQL_Value;
        var Stationery_SQL_Value;
        var data_result = new Array();
        var day = new Array();

        if(StartDay == "" || EndDay == ""){
            alert("날짜를 선턱해주세요");
            return false;
        }else{
            Rqgboard.style.display = "none";
            graph.style.display = "block";

            $.ajax({
                url: '/product_recommendation_list/chart',
                async: true,
                type: 'POST',
                data: {
                    StartDay: StartDay,
                    EndDay: EndDay,
                },
                dataType: 'json',

                success: function(data) {
                    //서버에서 메시지를 받아서 출력
                    Sales_SQL_Value = data['value1'];
                    Stationery_SQL_Value = data['value2'];

                    // alert(Stationery_SQL_Value.length);
                    // alert(Sales_SQL_Value.length);

                    //물품 값
                    for(var i=0; i<Sales_SQL_Value.length;i++){
                        for(var j=0; j<Stationery_SQL_Value.length;j++){
                            if(Stationery_SQL_Value[j].id == Sales_SQL_Value[i].Stationery_NO){
                                // alert(Stationery_SQL_Value[j].Name);
                                // alert(Sales_SQL_Value[i].Stationery_NO);
                                data_result.push({name : Stationery_SQL_Value[j].Name , Value : Sales_SQL_Value[i].Count});
                            }
                        }   
                    }

                    var data = {
                        labels: [],
                        datasets: [],
                    };

                    
                    var options = {
                        title:{
                            display: true,
                            text : StartDay + "~" + EndDay + " 제품 추천 리스트 Chart" 
                        },
                        animation: {
                            animateScale: true
                        },
                        responsive: false,
                        scales: {
                            yAxes: [
                                {
                                    ticks: {
                                        beginAtZero: true                                                                    
                                    }
                                }
                            ]
                        }
                    };

                    //날짜값 가지고 오기
                    for(var i=0; i<Sales_SQL_Value.length;i++){
                        //alert(Sales_SQL_Value[i].Today);
                        day.push(Sales_SQL_Value[i].Today);
                    }

                    //날짜 중복 제거
                    var result_day = Array.from(new Set(day));

                    //중복된 날짜 데이터 Chart에 넣기
                    for(var i=0; i<result_day.length; i++){
                        //alert(result_day[i]);
                        data.labels.push(result_day[i]);
                    }

                    var Color = ['red', 'orange', 'yellow', 'green', 'blue', 'purple', 'grey', 'white']

                    //데이터 넣기
                    for(var i=0; i<Stationery_SQL_Value.length;i++){
                        var shuffle_result = Math.floor(Math.random() * 7);
                        var newColor = Color[shuffle_result];

                        var newDataSet = {
                            label: Stationery_SQL_Value[i].Name,
                            backgroundColor: newColor,
                            borderColor: newColor,
                            data: [],
                            fill: false
                        };


                        //물품
                        for(var j=0; j<data_result.length; j++){
                            if(Stationery_SQL_Value[i].Name == data_result[j].name){
                                //alert(data_result[j].Value);
                                newDataSet.data.push(data_result[j].Value);
                            }
                        }

                        //alert(newDataSet.length);

                        data.datasets.push(newDataSet);
                        //alert(newDataSet);
                    }

                    var ctx = document.getElementById("myChart").getContext('2d');                                           
                    var myBarChart = new Chart(ctx, {
                        type: 'line',
                        data: data,
                        options: options
                    });
                }
            })
        }
    }
</script>
    
